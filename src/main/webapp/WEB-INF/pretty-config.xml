<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">
    <!-- FW -->
    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/login.xhtml"/>
    </url-mapping>
    <url-mapping id="logout">
        <pattern value="/logout"/>
        <view-id value="/logout.jsf"/>
    </url-mapping>
    <url-mapping id="error">
        <pattern value="/error.jsf"/>
        <view-id value="/Error.jsf"/>
    </url-mapping>
    <url-mapping id="refresh">
        <pattern value="/"/>
        <view-id value="/index.jsf"/>
    </url-mapping>
    <url-mapping id="loginSuccess">
        <pattern value="/home"/>
        <view-id value="/index.xhtml"/>
    </url-mapping>


</pretty-config>

