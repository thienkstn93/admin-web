<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">
    <!-- FW -->
    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/pages/login.xhtml"/>
    </url-mapping>
    <url-mapping id="logout">
        <pattern value="/logout"/>
        <view-id value="/pages/logout.xhtml"/>
    </url-mapping>
    <url-mapping id="customer-manager">
        <pattern value="/customer-manager"/>
        <view-id value="/pages/customer.xhtml"/>
    </url-mapping>
    <url-mapping id="customer-detail">
        <pattern value="/customer-detail"/>
        <view-id value="/pages/user/customer-detail.xhtml"/>
    </url-mapping>
    <url-mapping id="404">
        <pattern value="/404"/>
        <view-id value="/pages/404.xhtml"/>
    </url-mapping>
    <url-mapping id="error">
        <pattern value="/error.jsf"/>
        <view-id value="/Error.xhtml"/>
    </url-mapping>
    <url-mapping id="refresh">
        <pattern value="/"/>
        <view-id value="/pages/index.xhtml"/>
    </url-mapping>
    <url-mapping id="loginSuccess">
        <pattern value="/home"/>
        <view-id value="/pages/index.xhtml"/>
    </url-mapping>
    <url-mapping id="notification">
        <pattern value="/notification.jsf"/>
        <view-id value="/notification/notification.xhtml"/>
    </url-mapping>

</pretty-config>
